[Unit]
Description=OBD2 Web Dashboard Service
After=network.target obd2_startup.service

[Service]
Type=simple
User=pi
WorkingDirectory=/opt/obd2/obd2-repo
ExecStart=/opt/obd2/venv/bin/python /opt/obd2/obd2-repo/scripts/run_dashboard.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
