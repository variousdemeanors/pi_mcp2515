{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PIO: Build transmitter",
            "type": "shell",
            "command": "pio",
            "args": [
                "run",
                "-e",
                "esp32dev-transmitter"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "PIO: Upload transmitter",
            "type": "shell",
            "command": "pio",
            "args": [
                "run",
                "-t",
                "upload",
                "-e",
                "esp32dev-transmitter"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "PIO: Monitor transmitter",
            "type": "shell",
            "command": "pio",
            "args": [
                "device",
                "monitor",
                "-b",
                "115200"
            ],
            "isBackground": true
        },
        {
            "label": "PIO: Build receiver",
            "type": "shell",
            "command": "pio",
            "args": [
                "run",
                "-e",
                "esp32dev-receiver"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "PIO: Upload receiver",
            "type": "shell",
            "command": "pio",
            "args": [
                "run",
                "-t",
                "upload",
                "-e",
                "esp32dev-receiver"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "PIO: Monitor receiver",
            "type": "shell",
            "command": "pio",
            "args": [
                "device",
                "monitor",
                "-b",
                "115200"
            ],
            "isBackground": true
        }
    ]
}